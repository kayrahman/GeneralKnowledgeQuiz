<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_item_person"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView_profile_picture_top_two"
            android:layout_width="@dimen/suggestUserAvatarSize_medium"
            android:layout_height="@dimen/suggestUserAvatarSize_medium"
            android:layout_marginTop="@dimen/margin8dp"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            android:src="@drawable/male"
            />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_two"
                android:layout_marginTop="6dp"
                />


        </FrameLayout>


        <TextView
            android:id="@+id/textView_name_top_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin8dp"
            android:layout_marginBottom="@dimen/margin8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:text="Harley Joe"
            />



    </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_profile_picture_top_three"
                android:layout_width="@dimen/suggestUserAvatarSize"
                android:layout_height="@dimen/suggestUserAvatarSize"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin8dp"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                android:src="@drawable/avatar_winner_placeholder"
                />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_one"
                    android:layout_marginTop="12dp"
                    />



            </FrameLayout>

            <TextView
                android:id="@+id/textView_name_top_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8dp"
                android:layout_marginBottom="@dimen/margin8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="Orlando"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_profile_picture"
                android:layout_width="@dimen/suggestUserAvatarSize_medium"
                android:layout_height="@dimen/suggestUserAvatarSize_medium"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin8dp"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                android:src="@drawable/avatar_winner_female"
                />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_three"
                    android:layout_marginTop="6dp"
                    />


            </FrameLayout>


            <TextView
                android:id="@+id/textView_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8dp"
                android:layout_marginBottom="@dimen/margin8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="Catilyn"
                />



        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>